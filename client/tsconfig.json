{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "checkJs": false,
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true
  }, 
  "include": ["src/**/*.*", "tests/**/*.*"],
  "exclude": ["node_modules"]
}
